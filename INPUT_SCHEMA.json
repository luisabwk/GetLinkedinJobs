{
    "title": "LinkedIn Jobs Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchTerm": {
            "title": "Search Term",
            "type": "string",
            "description": "Job search keyword",
            "editor": "textfield"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "Job location",
            "editor": "textfield"
        },
        "li_at": {
            "title": "LinkedIn Cookie",
            "type": "string",
            "description": "LinkedIn authentication cookie value",
            "editor": "textfield"
        },
        "maxJobs": {
            "title": "Maximum Jobs",
            "type": "integer",
            "description": "Maximum number of jobs to scrape",
            "default": 50,
            "minimum": 1,
            "maximum": 1000
        }
    },
    "required": ["searchTerm", "location", "li_at"]
}
